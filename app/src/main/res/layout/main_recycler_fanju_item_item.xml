<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:scaleType="fitXY"
            fresco:fadeDuration="0"
            fresco:failureImage="@color/colorPrimary"
            fresco:failureImageScaleType="fitXY"
            fresco:placeholderImage="@color/white"
            fresco:placeholderImageScaleType="fitXY"
            fresco:retryImage="@color/white"
            fresco:retryImageScaleType="fitXY"
            fresco:roundWithOverlayColor="@color/white"
            fresco:roundedCornerRadius="4dp"
            fresco:roundingBorderColor="@color/e"
            fresco:roundingBorderWidth="1px" />


        <TextView
            android:id="@+id/stows_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="5dp"
            android:background="@drawable/view_radius4dp_frame_bg"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:text="2132"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_x" />
    </FrameLayout>


    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="title"
        android:textColor="@color/APPTextColor"
        android:textSize="@dimen/font_size_xx" />

    <TextView
        android:id="@+id/sub_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@color/six6"
        android:textSize="@dimen/font_size_x" />

</LinearLayout>